@model OnlineQuiz.Models.RegisterViewModel
<style>
    .inp {
        padding: 5px;
        width: 100%;
        height: 100%;
        margin: auto;
        border-radius: 5px;
    }

    .inp:focus {
        background-color: darkseagreen;
    }

    .dv {
        margin: auto;
        width: 300px;
        height: 40px;
    }
    .form-horizontal {
        width:30%;
        margin:auto;
    }
    label {
        color: white;
        font-size: 20px;
        text-align:center;
        width:100%;
    }
    .inp-btn{
        margin-top: 1%;
        background-color: darkseagreen;
        border: 0;
        border-radius: 5px;
        cursor: pointer;
        color: black;
        font-size: 12px;
        font-weight: bold;
        line-height: 1.4;
        padding: 10px;
        width: 140px;
    }
    .inp-btn:hover{
        background-color: #6d8c6d;
        transition: background-color 0.3s ease;
    }
</style>
<h4 style="margin:auto;width:25%; text-decoration:underline; text-align:center">Регистрација</h4>
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    <div class="form-group">
        <label>Име</label><br />
        <div class="col-md-10" style="width:inherit; margin:auto" >
            @Html.TextBoxFor(m => m.Name, new { @class = "inp" })
        </div>
    </div>
    <div class="form-group">
        <label>Презиме</label><br />
        <div class="col-md-10" style="width:inherit; margin:auto">
            @Html.TextBoxFor(m => m.Surname, new { @class = "inp" })
        </div>
    </div>

    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <label>Е-маил</label><br />
        <div class="col-md-10" style="width:inherit; margin:auto">
            @Html.TextBoxFor(m => m.Email, new { @class = "inp" })
        </div>
    </div>
    <div class="form-group">
        <label>Лозинка</label><br />
        <div class="col-md-10" style="width:inherit; margin:auto">
            @Html.PasswordFor(m => m.Password, new { @class = "inp" })
        </div>
    </div>
    <div class="form-group">
        <label>Потврди лозинка</label><br />
        <div class="col-md-10" style="width:inherit; margin:auto">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "inp" })
        </div>
    </div>
    <div class="form-group" style="margin:auto; margin-top:30px">
        <div class="col-md-offset-2 col-md-10" style="width:50%; margin:auto">
            <input type="submit" class="inp-btn" value="Регистрирај се" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

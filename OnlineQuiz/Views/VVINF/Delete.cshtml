@model OnlineQuiz.Models.Question

@{
    ViewBag.Title = "Delete";
}
<style>
    .dv {
        margin: auto;
        width: 500px;
        height: 40px;
    }
    label {
        color: white;
        font-size: 20px;
    }
    .inp {
        padding: 5px;
        width: 100%;
        height: 100%;
        margin: auto;
        border-radius: 5px;
    }
    .inp-btn{
        background-color: darkseagreen;
        border: 0;
        border-radius: 5px;
        cursor: pointer;
        color: black;
        font-size: 12px;
        font-weight: bold;
        line-height: 1.4;
        padding: 10px;
        width: 140px;
        margin-bottom:10px
    }
    .inp-btn:hover{
        background-color: #6d8c6d;
        transition: background-color 0.3s ease;
    }
</style>
<h4 style="text-align:center; text-decoration:underline">Дали сте сигурни дека сакате да го избришите ова прашање?</h4>
<div class="dv">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label>Предмет:</label><br />
        </dt>
        <dd>
            @Html.DisplayFor(model => model.subject)
        </dd>

        <dt>
            <label>Прашање:</label><br />
        </dt>

        <dd>
            @Html.DisplayFor(model => model.question)
        </dd>

        <dt>
            <label>Понудени одговори:</label><br />
        </dt>

        <dd>
            @Html.DisplayFor(model => model.possibleAnswers)
        </dd>

        <dt>
            <label>Точен одговор:</label><br />
        </dt>

        <dd>
            @Html.DisplayFor(model => model.correctAnswer)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="margin:auto">
            <input type="submit" value="Избриши" class="inp-btn" /><br />

        </div>
        <div>
            @Html.ActionLink("Врати се назад", "List")
        </div>
    }
</div>
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Home Page";
}
<style>
    #nav {
        width: 14%;
        float:right;
        margin-top:0.5%;
    }
    .inp-cont {
        margin-left:25%;
        margin-top: 1%;
        background-color: darkseagreen;
        border: 0;
        border-radius: 5px;
        cursor: pointer;
        color: black;
        font-size: 12px;
        font-weight: bold;
        line-height: 1.4;
        padding: 10px;
        width: 140px
    }
    .predmet {
        position: relative;
        background: rgb(103,103,103);
        background: linear-gradient(0deg, rgba(103,103,103,1) 0%, rgba(1,1,1,1) 100%);
        width: 48%;
        float: left;
        border-radius: 5px;
        opacity: 0.9;
        margin: 1%;
        height: 220px;
    }
    .predmet:hover {
        opacity: 1;
        border-left: 10px solid darkseagreen;
        transition: border-width 0.1s linear;
    }
    .inp-dv > h4 {
        text-align:center;
        margin-bottom:10%;
        margin-top: 5%;
    }
    .inp-dv {
        position: absolute;
        left: 15%;
        width:73%;
        height: 90%;
        top:5%;
    }
    #aok-naslov{
        width: 100%;
        text-align: center;
        margin:auto;
    }
    .nav-inp {
        margin-left: 0;
        margin-top: 2%;
        background-color: darkseagreen;
        border: 0;
        border-radius: 5px;
        cursor: pointer;
        color: black;
        font-size: 12px;
        font-weight: bold;
        line-height: 1.4;
        padding: 10px;
        width: 140px
    }
    #userstats > span {
        color: #fcf6f2;
        font-size: 16px;
        height: 25px;
        margin-left: 2%;
    }
    #userstats {
        border-top:5px solid darkseagreen;
        width: 14%;
        margin-top:1%;
        height: 95px;
        float: right;
        margin-bottom: 2.8%;
        padding-top: 1%;
    }
    .inp-cont:hover {
        background-color: #6d8c6d;
        transition: background-color 0.3s ease;
    }
    .nav-inp:hover {
        background-color: #6d8c6d;
        transition: background-color 0.3s ease;
    }
</style>
<div id="container">



    <div id="subjects" style="padding-left: 70px; float: left; width:85%">
        <div class="predmet">
            <div class="inp-dv">
                <h4>Основи на Веб Дизајн</h4> <!--ONVD-->
                <input type="button" class="inp-cont" value="Провери знаење" onclick="location.href = '@Url.Action("Index", "ONVD")'" /><br />
                @if (Roles.IsUserInRole("Administrator"))
                {
                    <input type="button"  class="inp-cont" value="Измени" onclick="location.href = '@Url.Action("List", "ONVD")'" />
                }
            </div>
        </div>
        <div class="predmet">
            <div class="inp-dv">
                <h4 id="aok-naslov">Архитектура и организација на компјутери</h4> <!--AOK-->
                <input type="button" class="inp-cont" value="Провери знаење" onclick="location.href = '@Url.Action("Index", "AOK")'" style="margin-top:11px" /><br />
                @if (Roles.IsUserInRole("Administrator"))
                {
                    <input type="button" class="inp-cont" value="Измени" onclick="location.href = '@Url.Action("List", "AOK")'" />
                }
            </div>
        </div>
        <div class="predmet">
            <div class="inp-dv">
                <h4>Компјутерски Компоненти</h4> <!--KK-->
                <input type="button" class="inp-cont" value="Провери знаење" onclick="location.href = '@Url.Action("Index", "KK")'" /><br />
                @if (Roles.IsUserInRole("Administrator"))
                {
                    <input type="button" class="inp-cont" value="Измени" onclick="location.href = '@Url.Action("List", "KK")'" />
                }
            </div>
        </div>
        <div class="predmet">
            <div class="inp-dv">
                <h4>Вовед во Информатика</h4> <!--VVINF-->
                <input type="button" class="inp-cont" value="Провери знаење" onclick="location.href = '@Url.Action("Index", "VVINF")'" /><br />
                @if (Roles.IsUserInRole("Administrator"))
                {
                    <input type="button" class="inp-cont" value="Измени" onclick="location.href = '@Url.Action("List", "VVINF")'" />
                }
            </div>
        </div>
    </div>

    <div id="userstats">
        <!-- Current user statistics ( Name, Surname, Points, ... )-->
        <span>@ViewData["currentUserName"]</span><br />
        <span>@ViewData["currentUserSurname"]</span> <br />
        <span>Освоени поени: @ViewData["currentUserPoints"]</span>
    </div>
    <div id="nav">
        <input type="button" class="nav-inp" value="Ранг Листа" onclick="location.href = '@Url.Action("Leaderboard","Home")'" />
        @if (Roles.IsUserInRole("Administrator"))
        {
            <input type="button" class="nav-inp" value="Корисници" onclick="location.href = '@Url.Action("Users_Review","Home")'" />
        }

    </div>
</div>